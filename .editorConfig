# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Tab indentation
[*]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

# html and php files
[{*.html, *.php}]
indent_size = 4
indent_style = tab

# JavaScript
[*.js]
indent_size = 2
indent_style = space